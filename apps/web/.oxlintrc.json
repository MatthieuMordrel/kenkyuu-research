{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "unicorn", "react", "react-perf", "import", "oxc"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "style": "off",
    "restriction": "off",
    "perf": "warn"
  },
  "rules": {
    "no-debugger": "error",
    "no-console": "warn",
    "typescript/no-explicit-any": "warn",
    "typescript/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "import/no-unassigned-import": [
      "warn",
      {
        "allow": ["**/*.css", "**/*.scss"]
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-no-target-blank": "error",
    "react/no-danger": "warn",
    "unicorn/no-instanceof-builtins": "off"
  },
  "ignorePatterns": ["node_modules", "dist", ".output", "*.gen.ts", "routeTree.gen.ts"]
}
