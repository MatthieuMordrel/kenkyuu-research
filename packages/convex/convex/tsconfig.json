{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "convex/_generated/*": ["./_generated/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./_generated"]
}
