{
  "name": "base-repo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "bun run --filter '*' dev",
    "dev:elysia": "bun run --filter @repo/elysia dev",
    "dev:web": "bun run --filter web dev",
    "dev:convex": "bun run --filter @repo/convex dev",
    "build:web": "bun run --filter web build",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix ."
  },
  "devDependencies": {
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.0.0"
  }
}