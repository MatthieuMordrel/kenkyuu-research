{
  "name": "base-repo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "kill-ports": "./scripts/kill-dev-ports.sh",
    "dev": "bun run dev:elysia & bun run dev:web",
    "dev:elysia": "bun run --filter @repo/elysia dev",
    "dev:web": "bun run --filter @repo/web dev",
    "dev:convex": "bun run --filter @repo/convex dev",
    "build:web": "bun run --filter @repo/web build",
    "typecheck": "bun run --filter '*' typecheck",
    "typecheck-go": "bun run --filter '*' typecheck-go",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix ."
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260122.4",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.0.0"
  }
}