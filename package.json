{
  "name": "base-repo",
  "private": true,
  "catalog": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "convex": "^1.31.6",
    "typescript": "^5.9.3",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "kill-ports": "./scripts/kill-dev-ports.sh",
    "dev": "bun run kill-ports && concurrently --kill-others-on-fail --names 'WEB,CONVEX' --prefix-colors 'blue,magenta' 'bun run dev:web' 'bun run dev:convex'",
    "dev:web": "bun run --filter @repo/web dev",
    "dev:convex": "bun run --filter @repo/convex dev",
    "build:web": "bun run --filter @repo/web build",
    "typecheck": "bun run --filter '*' typecheck",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "deps:check": "bun outdated --recursive",
    "deps:update": "bun update --filter '*'"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260122.4",
    "concurrently": "^9.2.1",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "catalog:"
  }
}